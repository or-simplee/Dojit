<%= form_for [@post, @post.comments.build], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :body , rows: 2, class: 'form-control', placeholder: "Enter comment" %>
  </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %> 